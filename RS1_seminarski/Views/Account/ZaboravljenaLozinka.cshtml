@model RS1_seminarski.Modelview.ZaboravljenaLozinkaVM

@{
    ViewData["Title"] = "Zaboravljena lozinka";
}

<h2>Zaboravljena lozinka</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Email" placeholder="npr@mail.com" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Potvrdi</button>
        </form>
    </div>
</div> 