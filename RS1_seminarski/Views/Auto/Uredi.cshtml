@using RS1_seminarski.Modelview

@model AutobiliUrediWM


<div style="width:auto" class="col-md-4 col-md-offset-4">
   

    <form asp-action="Snimi" asp-controller="Auto">

        <div class="form-group">
            <label>Automobil   ID : </label>
            <div>
                <input asp-for="AutomobilID" class="form-control" />

            </div>
        </div>

        <div class="form-group">
            <label>Naziv : </label>
            <div>
                <input asp-for="Proizvodjac" class="form-control" />
                <span asp-validation-for="Proizvodjac" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Model : </label>
            <div>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label>Sifra automobila  : </label>
            <div>
                <input asp-for="SifraAutomobila" class="form-control" />
                <span asp-validation-for="SifraAutomobila" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Zaliha : </label>
            <div>
                <input asp-for="Zaliha" class="form-control" />
                <span asp-validation-for="Zaliha" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Kategorija : </label>
            <div>
                <select asp-for="KategorijaID" asp-items="Model.KategorijaStavke"> </select>

            </div>
        </div>
        <div class="form-group">
            <label>Porezna stopa  : </label>
            <div>
                <select asp-for="PoreznaStopaID" asp-items="Model.PoreznaStopaStavke"> </select>

            </div>
        </div>
        <div class="form-group">
            <label>Paket opreme   : </label>
            <div>
                <select asp-for="PaketOpremeID" asp-items="Model.PaketOpremeStavke"> </select>

            </div>
        </div>

        <input type="submit" class="form-control btn btn-primary" value="Snimi" />

    </form>
    
</div>  