@using RS1_seminarski.Modelview


@model KategorijaWM

  

  <style>

        #D2 {
            display: inline-block;
        }
    </style>




    <div class="text-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> Kategorija ID </th>
                    <th> Naziv  </th>
                    <th> Akcija  </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.KategorijaRow)
                {
                    <tr>
                        <td> @k.KategorijaID</td>
                        <td> @k.naziv</td>
                        <td>
                            <a class="btn btn-primary" href="/Kategorija/Uredi?ID=@k.KategorijaID"> Uredi </a>|
                            <a class="btn btn-danger" href="/Kategorija/Obrisi?ID=@k.KategorijaID"> Obrisi </a>
                        </td>
                    </tr>

                }

            </tbody>


        </table>
    </div>
    <a href="/Kategorija/Dodaj" class="btn btn-primary"> Dodaj</a>
    <a id="D2" href="/Home/Index" class="btn btn-primary"> Home </a>