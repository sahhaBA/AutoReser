@{
    ViewData["Title"] = "Registracija";
}

@using RS1_seminarski.Modelview

@{
    ViewData["Title"] = "Kreiranje Naloga";
    string error_poruka = (string)TempData["error"];
    var AdminJe = ViewData["AdminJe"] as string;
}

@model RegistracijaVM

<div style="width:auto" class="col-md-4 col-md-offset-4">
    <h2><span>Registracija</span></h2>
    <hr />
    <form method="post" asp-action="KreiranjeAccounta" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.KorisnickoIme" placeholder="Korisnicko ime" class="form-control" />
                <span asp-validation-for="@Model.KorisnickoIme" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input asp-for="@Model.Lozinka" placeholder="Lozinka" class="form-control" />
                <span asp-validation-for="@Model.Lozinka" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input asp-for="@Model.PotvrdiLozinku" placeholder="Potvrdi lozinku" class="form-control" />
                <span asp-validation-for="@Model.PotvrdiLozinku" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input asp-for="@Model.Email" placeholder="Primjer@email.com" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>

        <h4><span>Lični podaci</span></h4>
        <hr />
        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.Ime" placeholder="Ime" class="form-control" />
                <span asp-validation-for="@Model.Ime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.Prezime" placeholder="Prezime" class="form-control" />
                <span asp-validation-for="@Model.Prezime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <select class="form-control" asp-items="@Model.Spolstr" asp-for="@Model.SpolstrID"></select>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.Adresa" placeholder="Adresa" class="form-control" />
                <span asp-validation-for="@Model.Adresa" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.GradNaziv" placeholder="Grad" class="form-control" />
                <span asp-validation-for="@Model.GradNaziv" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.PostanskiBroj" placeholder="Postanski broj" class="form-control" />
                <span asp-validation-for="@Model.PostanskiBroj" class="text-danger"></span>
            </div>
        </div>

        <input type="submit" class="form-control btn btn-success" value="Registruj se" />
        <br />
    </form>

    @if (error_poruka != null)
    {
        <br />
        <div class="alert alert-danger">
            @error_poruka
        </div>
    }
    <hr />
    @if (AdminJe == "AdminJe")
    {
        <a class="form-control btn btn-primary" asp-action="ListaKorisnika" asp-controller="Administracija">Nazad</a>
    }
    else
    {
        <a class="form-control btn btn-primary" asp-action="Index">Nazad</a>
    }
</div>
