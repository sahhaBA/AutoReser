@{
}

@using RS1_seminarski.Modelview

@model UposlenikUrediWM


<div style="width:auto" class="col-md-4 col-md-offset-4">
   

    <form asp-action="Snimi" asp-controller="Uposlenik">

        <div class="form-group">
            <label>Uposlenik ID  : </label>
            <div>
                <input asp-for="UposlenikID" class="form-control" />

            </div>
        </div>

        <div class="form-group">
            <label>Ime : </label>
            <div>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Prezime: </label>
            <div>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label>Korisnickoime : </label>
            <div>
                <input asp-for="KorisnickoIme" class="form-control" />
                <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Lozinka : </label>
            <div>
                <input type="password" asp-for="Lozinka" class="form-control" />

                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Datum zaposlenja  : </label>
            <div>
                <input asp-for="DatumZaposlenja" />
                <span asp-validation-for="DatumZaposlenja" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Grad  : </label>
            <div>
                <select asp-for="GradID" asp-items="Model.GradoviStavka" class="form-control"> </select>
            </div>
        </div>
        <div class="form-group">
            <label>Adresa  : </label>
            <div>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Iskustavo   : </label>
            <div>
                <input asp-for="Iskustvo" />

            </div>
        </div>
        <div class="form-group">
            <label>Minuli staž   : </label>
            <div>
                <input asp-for="MinuliStaz" />

            </div>
        </div>
        <div class="form-group">
            <label>JMBG  : </label>
            <div>
                <input asp-for="JMBG" />

            </div>
        </div>


        <div class="form-group">
            <label> Radno mjesto : </label>
            <div>
                <select asp-for="RadnoMjestoID" asp-items="Model.RadnoMjestoStavka" class="form-control"> </select>
            </div>
        </div>

        <div class="form-group">
            <label>Sturcna sprema   : </label>
            <div>
                <select asp-for="StrucnaSpremaID" asp-items="Model.StrucnaSpremaStavke" class="form-control"> </select>
            </div>
        </div>

        <div class="form-group">
            <label>Spol  : </label>
            <div>
                <select asp-for="SpolID" asp-items="Model.SpolStavka" class="form-control"> </select>
            </div>
        </div>


        <input type="submit" class="form-control btn btn-primary" value="Snimi" />

    </form>

</div>  