                            <a class="btn btn-danger" href="/PoreznaStopa/Obrisi?ID=@k.PoreznaStopaID"> Obrisi </a>
                        </td>
                    </tr>

                }

            </tbody>


        </table>
    </div>
    <a href="/PoreznaStopa/Dodaj" class="btn btn-primary"> Dodaj</a>
