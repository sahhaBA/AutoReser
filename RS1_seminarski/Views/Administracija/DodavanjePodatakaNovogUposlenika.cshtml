@model RS1_seminarski.Modelview.DodavanjePodatakaNovogUposlenikaVM

<h2>Evidentiranje uposlenika [@Model.noviUposlenik]</h2>
<hr />

<form id="forma" asp-action="DodavanjePodatakaNovogUposlenika">
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            JMBG:
        </label>
        <div class="col-sm-8">
            <input type="text" asp-for="@Model.JMBG" class="form-control" />
            <span asp-validation-for="@Model.JMBG" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            Iskustvo (br. Godina):
        </label>
        <div class="col-sm-8">
            <input type="text" value="" asp-for="@Model.Iskustvo" class="form-control" />
            <span asp-validation-for="@Model.Iskustvo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            Staž (br. Godina):
        </label>
        <div class="col-sm-8">
            <input type="text" value="" asp-for="@Model.MinuliStaz" class="form-control" />
            <span asp-validation-for="@Model.MinuliStaz" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            Stručna sprema:
        </label>
        <div class="col-sm-8">
            <select class="form-control proizvodjac str" asp-for="@Model.StrucnaSpremaID" asp-items="@Model.StrucnaSprema"></select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            Nova stručna sprema:
        </label>
        <div class="col-sm-8">
            <input type="text" required placeholder="Opcionalno" asp-for="@Model.NovaStrucnaSprema" class="form-control novaStr" />
            <span asp-validation-for="@Model.NovaStrucnaSprema" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            Radno mjesto:
        </label>
        <div class="col-sm-8">
            <select class="form-control proizvodjac rmj" asp-for="@Model.RadnoMjestoID" asp-items="@Model.RadnoMjesto"></select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">
            Novo radno mjesto:
        </label>
        <div class="col-sm-8">
            <input type="text" required placeholder="Opcionalno" asp-for="@Model.NovoRadnoMjesto" class="form-control novakat novoRmj" />
            <span asp-validation-for="@Model.NovoRadnoMjesto" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">
                <svg id="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                </svg> <b>Spasi</b> 
            </button>
            <a asp-action="UrediKorisnika" asp-route-Id="@Model.Id" class="btn btn-primary">Nazad</a>
        </div>
    </div>

    <input type="text" hidden asp-for="@Model.Id" value="@Model.Id" />
</form>

<script>
    $(".novaStr").focus(function () {
        $(".str").val("---");
    });
    $(".novaStr").focusout(function () {
        $(".novaStr").prop('required', true);
    });
    $(".str").change(function () {
        $(".novaStr").val("");

        if ($(".str").find(":selected").text() != "---") {
            $(".novaStr").prop('required', false);
        }
        else {
            $(".novaStr").prop('required', true);
        }
    });

    $(".novoRmj").focus(function () {
        $(".rmj").val("---");
    });
    $(".novoRmj").focusout(function () {
        $(".novoRmj").prop('required', true);
    });
    $(".rmj").change(function () {
        $(".novoRmj").val("");

        if ($(".rmj").find(":selected").text() != "---") {
            $(".novoRmj").prop('required', false);
        }
        else {
            $(".novoRmj").prop('required', true);
        }
    });
</script>