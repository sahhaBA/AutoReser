@model RS1_seminarski.Modelview.KreirajUloguVM;

@{
    ViewData["Title"] = "Kreiranje nove uloge";
}

<div style="width:auto" class="col-md-4 col-md-offset-4">
    <h2><span>Nova uloga</span></h2>
    <hr />
    <form asp-action="KreirajUlogu" asp-controller="Administracija">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div>
                <input type="text" asp-for="@Model.NazivUloge" placeholder="Naziv" class="form-control" />
                <span asp-validation-for="@Model.NazivUloge" class="text-danger"></span>
            </div>
        </div>

        <input type="submit" class="form-control btn btn-success" value="Snimi" />
        <br />
    </form>

    <hr />
    <a class="form-control btn btn-primary" asp-controller="Administracija" asp-action="ListaUloga">Nazad</a>
</div>
