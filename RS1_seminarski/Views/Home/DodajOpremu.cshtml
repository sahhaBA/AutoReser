@model RS1_seminarski.Modelview.DodajOpremuVM;
@using Podaci.Entiteti;

@inject SignInManager<KorisnickiNalog> signInManager;

@{ 
    ViewData["Title"] = "Dodavanje opreme";
    var Id = ViewBag.Id;
    }

<style>
    #forma {
        width: 50%;
    }

    #dugme {
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        color: white;
    }

    #icon {
        margin-right: 3px;
    }
</style>
<body>
    <div id="sve">
        <form id="forma" asp-action="DodavanjeNoveOpreme">
            <div class="form-group">
                <label class="col-sm-4 col-form-label">
                    Naziv opreme:
                </label>
                <div class="col-sm-8">
                    <input type="text" asp-for="@Model.nazivOpreme" class="form-control" />
                    <span asp-validation-for="@Model.nazivOpreme" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-8">
                <button class="btn btn-success" id="dugme">
                    <svg id="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                        <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                    </svg> <b>Spasi</b>
                </button>
            </div>

            <input type="text" hidden asp-for="@Model.AutomobilID" value="@Model.AutomobilID" />
            <input type="text" hidden asp-for="@Model.PaketOpremeID" value="@Model.PaketOpremeID" />
            <input type="text" hidden asp-for="@Model.Id" value="@Model.Id" />
        </form>
    </div>
</body>