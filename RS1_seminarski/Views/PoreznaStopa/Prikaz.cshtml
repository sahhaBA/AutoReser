@using RS1_seminarski.Modelview


@model PoreznaStopaWM


    <style>

        #D2 {
            display: inline-block;
        }
    </style>




    <div class="text-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> PoreznaStopa ID </th>
                    <th> Naziv  </th>
                    <th> Iznos u postotku (%) </th>
                    <th> Akcija  </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.PoreznaStopaRows)
                {
                    <tr>
                        <td> @k.PoreznaStopaID</td>
                        <td> @k.Naziv</td>
                        <td> @k.Iznos</td>
