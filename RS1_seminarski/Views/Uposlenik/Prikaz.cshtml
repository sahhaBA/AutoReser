@{
}

@using RS1_seminarski.Modelview


@model UposlenikPrikazWM

<style>

    #D2 {
        display: inline-block;
    }
</style>


<div class="text-center">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> Ime </th>
                <th> Prezime  </th>
                <th> KorisnickoIme  </th>
                <td> Datum zaposlenja </td>
                <th> Grad   </th>
                <th> Adresa  </th>
                <th>   Radnomjesto    </th>
                <th> Akcija   </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in Model.UposleniciRows)
            {
                <tr>
                    <td> @k.Ime</td>
                    <td> @k.Prezime</td>
                    <td> @k.KorisnickoIme</td>
                    <td> @k.DatumZaposlenja</td>
                    <td> @k.NazivGrada</td>
                    <td> @k.Adresa</td>
                    <td> @k.RadnoMjesto</td>

                    <td>
                        <a class="btn btn-primary" href="/Uposlenik/Uredi?ID=@k.UposlenikID"> Uredi </a>|
                        <a class="btn btn-danger" href="/Uposlenik/Obrisi?ID=@k.UposlenikID"> Obrisi </a>
                    </td>
                </tr>

            }

        </tbody>


    </table>
</div>
<a href="/Uposlenik/Dodaj" class="btn btn-primary"> Dodaj</a>
<a id="D2" href="/Home/Index" class="btn btn-primary"> Home </a>