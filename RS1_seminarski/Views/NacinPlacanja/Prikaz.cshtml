@using RS1_seminarski.Modelview


@model NacinPlacanjaPrikazWM

    <style>

        #D2 {
            display: inline-block;
        }
    </style>


    <div class="text-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> NacinPlacanja ID </th>
                    <th> Naziv  </th>
                    <th> Akcija  </th>
                </tr>
