@model RS1_seminarski.Modelview.ResetPasswordVM

<h2>Reset lozinke</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="@Model.Token" type="hidden" />
            <input asp-for="@Model.Email" type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.Lozinka"></label>
                <input asp-for="@Model.Lozinka" class="form-control" />
                <span asp-validation-for="@Model.Lozinka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PotvrdiLozinku"></label>
                <input asp-for="@Model.PotvrdiLozinku" class="form-control" />
                <span asp-validation-for="@Model.PotvrdiLozinku" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Reset</button>
        </form>
    </div>
</div>
